generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  name String?
  Posts Post[]
}

model Post {
  id       Int    @id @default(autoincrement())
  title    String
  content String?
  author   User @relation(fields: [authorId], references: [id])
  authorId Int
}